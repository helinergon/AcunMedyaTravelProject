@{
    ViewBag.Title = "AddBookings";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: rgb(210, 208, 160);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: rgb(83, 125, 93);
        margin-bottom: 25px;
        text-align: center;
        font-weight: 700;
    }

    label {
        color: rgb(115, 148, 107);
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px 14px;
        border: 1.8px solid rgb(115, 148, 107);
        border-radius: 12px;
        background-color: rgb(238, 244, 230);
        font-size: 1rem;
        color: rgb(83, 125, 93);
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        box-shadow: inset 0 1px 3px rgb(210 208 160 / 0.3);
        margin-bottom: 18px;
    }

        .form-control:focus {
            border-color: rgb(83, 125, 93);
            outline: none;
            box-shadow: 0 0 8px rgb(83, 125, 93 / 0.5);
            background-color: white;
            color: rgb(38, 70, 48);
        }

    .btn-custom {
        background-color: rgb(83, 125, 93);
        color: white;
        font-weight: 700;
        border: none;
        padding: 12px 25px;
        border-radius: 12px;
        cursor: pointer;
        font-size: 1.1rem;
        width: 100%;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 8px rgb(83, 125, 93 / 0.3);
        margin-top: 10px;
    }

        .btn-custom:hover {
            background-color: rgb(115, 148, 107);
            box-shadow: 0 6px 14px rgb(115, 148, 107 / 0.5);
        }

    .form-container {
        background-color: rgb(158, 188, 138);
        padding: 35px 40px;
        border-radius: 20px;
        max-width: 600px;
        margin: 50px auto;
        box-shadow: 0 8px 25px rgb(115, 148, 107 / 0.25);
        border: 2px solid rgb(115, 148, 107);
    }
</style>

<div class="form-container">
    

    <form method="post">
        <h2><i class="fas fa-plus-circle"></i> Rezervasyon Ekleme Sayfası</h2>
        <label for="Title">Başlık</label>
        <input type="text" id="Title" class="form-control" name="Title" placeholder="Etkinlik başlığı" required />

        <label for="TravelDateStart">Seyahat Başlama Tarihi</label>
        <input type="date" id="TravelDateStart" class="form-control" name="TravelDateStart" required />

        <label for="TravelDateEnd">Seyahat Bitiş Tarihi</label>
        <input type="date" id="TravelDateEnd" class="form-control" name="TravelDateEnd" required />

        <label for="OrganizerName">Organizasyoncunun Adı</label>
        <input type="text" id="OrganizerName" class="form-control" name="OrganizerName" placeholder="Organizatör" required />

        <label for="AttendeesCount">Katılımcı Sayısı</label>
        <input type="number" id="AttendeesCount" class="form-control" name="AttendeesCount" min="1" placeholder="0" required />

        <label for="ImageUrl">Resim URL</label>
        <input type="url" id="ImageUrl" class="form-control" name="ImageUrl" placeholder="https://..." />

        <button class="btn btn-custom" type="submit"><i class="fas fa-save"></i> Rezervasyonu Ekle</button>
    </form>
</div>
