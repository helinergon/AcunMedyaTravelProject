@model List<AcunMedyaTravelProject.Entities.Bookings>
@{
    ViewBag.Title = "Rezervasyon";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<!-- Font Awesome ikonları -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    tbody, td {
        background-color: rgb(210, 208, 160) !important;
        color: black;
    }

        tbody tr:hover {
            background-color: rgb(210, 208, 160) !important;
            color: black;
        }
    .container {
        margin-top: 2rem;
    }

    .card {
        box-shadow: 0 4px 12px rgba(83, 125, 93, 0.15);
        border-radius: 12px;
        background-color: rgb(210, 208, 160); /* Açık pastel yeşil-bej karışımı */
    }

    .card-header {
        background-color: rgb(83, 125, 93); /* Koyu pastel yeşil */
        color: white;
        font-weight: 600;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
    }

    .btn {
        background-color: rgb(115, 148, 107); /* Orta pastel yeşil */
        color: white;
        border: none;
        border-radius: 6px;
        padding: 0.45rem 0.9rem;
        font-weight: 600;
        transition: background-color 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
    }

        .btn:hover {
            background-color: rgb(158, 188, 138); /* Açık pastel yeşil */
            color: rgb(83, 125, 93);
        }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: rgb(210, 208, 160); /* Açık pastel yeşil-bej */
    }

    thead {
        background-color: rgb(115, 148, 107); /* Orta pastel yeşil */
        color: white;
        font-weight: 600;
    }

    th, td {
        padding: 12px 15px;
        border: 1px solid rgb(158, 188, 138);
        text-align: center;
        vertical-align: middle;
    }

    tbody tr:nth-child(even) {
        background-color: rgb(210, 208, 160);
    }

    tbody tr:nth-child(odd) {
        background-color: rgb(158, 188, 138);
    }

    tbody tr:hover {
        background-color: rgb(115, 148, 107);
        color: white;
    }

    img.rounded {
        border-radius: 8px;
        object-fit: cover;
        width: 60px;
        height: 60px;
    }

</style>

<div class="container">
    <div class="card shadow-lg rounded">
        <div class="card-header">
            <h3 class="mb-0">Rezervasyon Sayfası</h3>
            <a href="/Bookings/AddBookings/" class="btn">
                <i class="fas fa-plus"></i> Yeni Rezervasyon
            </a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Seyahat Başlangıç Tarihi</th>
                        <th>Seyahat Bitiş Tarihi</th>
                        <th>Organizatör Adı</th>
                        <th>Konum / Yer</th>
                        <th>Katılımcı Sayısı</th>
                        <th>Resim</th>
                        <th>Favori mi?</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BookingsID</td>
                            <td>@item.Title</td>
                            <td>@item.TravelDateStart</td>
                            <td>@item.TravelDateEnd</td>
                            <td>@item.OrganizerName</td>
                            <td>@item.Location</td>
                            <td>@item.AttendeesCount</td>
                            <td>
                                <img src="@item.ImageUrl" class="rounded" />
                            </td>
                            <td>@item.IsFavorite</td>

                            <td>
                                <a href="/Bookings/UpdateBookings/@item.BookingsID" class="btn">
                                    <i class="fas fa-edit"></i> Güncelle
                                </a>
                            </td>
                            <td>
                                <a href="/Bookings/DeleteBookings/@item.BookingsID" class="btn" onclick="return confirm('Bu rezervasyonu silmek istediğinize emin misiniz?');" style="background-color: #73946B; ">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
