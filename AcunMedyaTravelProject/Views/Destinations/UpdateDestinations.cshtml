@model AcunMedyaTravelProject.Entities.Destinations
@{
    ViewBag.Title = "UpdateDestinations";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: rgb(210, 208, 160);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        padding: 30px 0;
    }

    .form-container {
        max-width: 650px;
        margin: 50px auto;
        background-color: rgb(158, 188, 138);
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(83, 125, 93, 0.3);
        padding: 35px 40px;
        animation: fadeIn 0.5s ease-in-out;
    }

    h2 {
        text-align: center;
        color: rgb(83, 125, 93);
        margin-bottom: 30px;
        font-weight: 700;
    }

    .form-label {
        font-weight: 600;
        color: rgb(83, 125, 93);
    }

    .input-group-text {
        background-color: rgb(115, 148, 107);
        border: none;
        color: rgb(210, 208, 160);
        width: 42px;
        justify-content: center;
    }

    .form-control {
        border-radius: 10px;
        border: 1.5px solid rgb(115, 148, 107);
        background-color: rgb(210, 208, 160);
        color: rgb(53, 78, 43);
        font-weight: 500;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        padding-left: 12px;
    }

    .form-control::placeholder {
        color: rgb(115, 148, 107);
        opacity: 1;
    }

    .form-control:focus {
        border-color: rgb(83, 125, 93);
        box-shadow: 0 0 8px rgba(83, 125, 93, 0.6);
        background-color: #f0f4e8;
        color: rgb(50, 80, 40);
    }

    .btn-green {
        background-color: rgb(83, 125, 93);
        color: white;
        border-radius: 10px;
        font-weight: bold;
        padding: 10px 28px;
        border: none;
        width: 100%;
        box-shadow: 0 4px 8px rgba(83, 125, 93, 0.4);
        transition: background-color 0.3s ease;
        margin-top: 15px;
    }

    .btn-green:hover {
        background-color: rgb(115, 148, 107);
        box-shadow: 0 6px 12px rgba(115, 148, 107, 0.5);
    }

    .img-preview {
        max-height: 200px;
        margin-top: 10px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        display: none;
        width: 100%;
        object-fit: cover;
    }

    .mb-3 {
        margin-bottom: 20px;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px);}
        to { opacity: 1; transform: translateY(0);}
    }
</style>

<div class="form-container">
    <h2>Gidilecek Yerler Güncelleme Sayfası</h2>
    <form method="post">
        @Html.HiddenFor(x => x.DestinationsID)

        <div class="mb-3">
            <label class="form-label">Resim URL</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-image"></i></span>
                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", placeholder = "https://...", oninput = "updateImagePreview(this.value)" })
            </div>
            <img id="imagePreview" class="img-preview" />
        </div>

        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-heading"></i></span>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Başlık" })
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Gün Sayısı</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                @Html.TextBoxFor(x => x.DaysTrip, new { @class = "form-control", placeholder = "Gün Sayısı" })
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Fiyat</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-money-bill-wave"></i></span>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control", placeholder = "Fiyat" })
            </div>
        </div>

        <button type="submit" class="btn btn-green"><i class="fas fa-save"></i> Güncelle</button>
    </form>
</div>

<script>
    function updateImagePreview(url) {
        const img = document.getElementById("imagePreview");
        if (url && url.startsWith("http")) {
            img.src = url;
            img.style.display = "block";
        } else {
            img.style.display = "none";
        }
    }
</script>
