@model List<AcunMedyaTravelProject.Entities.statistics>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- FontAwesome CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="stats-container">
    <h2 class="title">İstatistikler Paneli</h2>

    <div class="stats-grid">
        <div class="stat-box" style="--color: rgb(83, 125, 93);">
            <i class="fas fa-calendar-check icon"></i>
            <p>Rezervasyonlar</p>
            <h3>@ViewBag.BookingsCount</h3>
        </div>
        <div class="stat-box" style="--color: rgb(80, 110, 80);">
            <i class="fas fa-step-forward icon"></i>
            <p>Rezervasyon Adımları</p>
            <h3>@ViewBag.BookingStepsCount</h3>
        </div>
        <div class="stat-box" style="--color: rgb(100, 120, 80);">
            <i class="fas fa-tags icon"></i>
            <p>Kategoriler</p>
            <h3>@ViewBag.CategoryCount</h3>
        </div>

        <div class="stat-box" style="--color: rgb(140, 130, 100); color: rgb(60, 90, 60);">
            <i class="fas fa-map-marked-alt icon"></i>
            <p>Destinasyonlar</p>
            <h3>@ViewBag.DestinationsCount</h3>
        </div>
        <div class="stat-box" style="--color: rgb(80, 110, 80);">
            <i class="fas fa-sign-in-alt icon"></i>
            <p>Giriş</p>
            <h3>@ViewBag.LoginCount</h3>
        </div>
        <div class="stat-box" style="--color: rgb(60, 90, 60);">
            <i class="fas fa-concierge-bell icon"></i>
            <p>Hizmetler</p>
            <h3>@ViewBag.ServicesCount</h3>
        </div>
        <div class="stat-box" style="--color: rgb(100, 120, 80); color: rgb(60, 90, 60);">
            <i class="fas fa-images icon"></i>
            <p>Slider</p>
            <h3>@ViewBag.SliderCount</h3>
        </div>
        <div class="stat-box" style="--color: rgb(80, 110, 80);">
            <i class="fas fa-handshake icon"></i>
            <p>Sponsorlar</p>
            <h3>@ViewBag.SponsorCount</h3>
        </div>
        <div class="stat-box" style="--color: rgb(60, 90, 60);">
            <i class="fas fa-comments icon"></i>
            <p>Yorumlar</p>
            <h3>@ViewBag.TestimonialCount</h3>
        </div>
    </div>
</div>

<style>
    .stat-box {
        background: linear-gradient(135deg, rgba(60, 90, 60, 0.9), rgba(160, 158, 130, 0.9));
        color: #fff;
        padding: 24px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 18px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
        text-align: center;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .stat-box::before {
            content: "";
            position: absolute;
            top: -30px;
            right: -30px;
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
            z-index: 0;
        }

        .stat-box:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

        .stat-box .icon {
            font-size: 32px;
            margin-bottom: 12px;
            z-index: 1;
            position: relative;
            color: #fff;
            filter: drop-shadow(0 0 2px rgba(0,0,0,0.3));
        }

        .stat-box p,
        .stat-box h3 {
            z-index: 1;
            position: relative;
            color: #fff;
        }

        .stat-box h3 {
            font-size: 24px;
            margin-top: 6px;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
    }

    .title {
        color: rgb(60, 90, 60);
        font-size: 34px;
        margin-bottom: 24px;
        font-weight: 600;
        text-align: center;
    }

    h3.user-stats-title {
        color: rgb(60, 90, 60);
        margin-top: 40px;
        text-align: center;
    }

    /* Kullanıcı bazlı kartlar */
    .user-cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        margin-top: 24px;
    }

    .user-card-container {
        background-color: rgb(160, 158, 130);
        border-radius: 16px;
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        padding: 20px;
        transition: transform 0.3s ease;
    }

        .user-card-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(60, 90, 60, 0.4);
        }

    .user-email {
        font-size: 18px;
        color: rgb(60, 90, 60);
        margin-bottom: 16px;
        text-align: center;
    }

    .user-stats-boxes {
        display: flex;
        justify-content: space-around;
        gap: 10px;
        flex-wrap: wrap;
    }

    .stat-item {
        background-color: rgb(110, 130, 90);
        border-radius: 12px;
        padding: 12px 10px;
        text-align: center;
        flex: 1 1 80px;
        min-width: 80px;
        box-shadow: 0 3px 6px rgba(0,0,0,0.15);
        transition: background 0.3s;
        color: rgb(60, 90, 55);
    }

        .stat-item:hover {
            background-color: rgb(90, 120, 80);
            color: #fff;
        }

        .stat-item i {
            font-size: 20px;
            color: rgb(60, 90, 55);
            margin-bottom: 6px;
            display: block;
        }

        .stat-item:hover i {
            color: #fff;
        }

        .stat-item p {
            font-size: 14px;
            color: rgb(50, 90, 55);
            margin: 4px 0 2px;
        }

        .stat-item span {
            font-weight: bold;
            color: rgb(30, 70, 40);
            font-size: 16px;
        }
</style>

<h3 class="title">Kullanıcı Bazlı İstatistikler</h3>
<div class="user-cards-grid">
    @foreach (var user in (List<AcunMedyaTravelProject.Entities.UserStatViewModel>)ViewBag.UserStats)
    {
        <div class="user-card-container">
            <h4 class="user-email">@user.Email</h4>
            <div class="user-stats-boxes">
                <div class="stat-item">
                    <i class="fas fa-sign-in-alt"></i>
                    <p>Giriş</p>
                    <span>@user.LoginCount</span>
                </div>
                <div class="stat-item">
                    <i class="fas fa-comments"></i>
                    <p>Yorum</p>
                    <span>@user.CommentCount</span>
                </div>
                <div class="stat-item">
                    <i class="fas fa-calendar-check"></i>
                    <p>Rezervasyon</p>
                    <span>@user.ReservationCount</span>
                </div>
            </div>
        </div>
    }
</div>
