@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    body {
        background-color: rgb(210, 208, 160);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: rgb(83, 125, 93);
        margin-bottom: 20px;
        text-align: center;
    }

    label {
        color: rgb(83, 125, 93);
        font-weight: bold;
    }

    .form-control {
        border: 1px solid rgb(115, 148, 107);
        margin-bottom: 15px;
        background-color: rgb(158, 188, 138);
        color: rgb(30, 70, 40);
        border-radius: 6px;
        padding: 8px 10px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: rgb(83, 125, 93);
            outline: none;
            background-color: #e8f0df;
            color: rgb(30, 70, 40);
            box-shadow: 0 0 6px rgb(83, 125, 93);
        }

    .btn-custom {
        background-color: rgb(83, 125, 93);
        color: white;
        border: none;
        margin-top: 5px;
        border-radius: 8px;
        font-weight: bold;
        padding: 10px 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-custom:hover {
            background-color: rgb(115, 148, 107);
            color: white;
        }

    .form-container {
        background-color: rgb(158, 188, 138);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(83, 125, 93, 0.3);
        max-width: 600px;
        margin: 40px auto;
    }
</style>

<div class="form-container">
    <h2>Yorum Ekleme Sayfası</h2>

    <form method="post">
        <label>İsim</label>
        <input type="text" class="form-control" name="Name" />

        <label>Soyisim</label>
        <input type="text" class="form-control" name="SurName" />

        <label>Resim Url</label>
        <input type="text" class="form-control" name="ImageUrl" />

        <label>Açıklama</label>
        <input type="text" class="form-control" name="Description" />

        <button class="btn btn-custom" type="submit">Yorum Ekle</button>
    </form>
</div>
