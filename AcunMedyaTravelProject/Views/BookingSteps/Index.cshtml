@model List<AcunMedyaTravelProject.Entities.BookingSteps>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Font Awesome ikonları -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    .card-header {
        background-color: rgb(83, 125, 93);
        color: white;
    }

    .btn-add {
        background-color: rgb(115, 148, 107);
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-add:hover {
            background-color: rgb(83, 125, 93);
        }

    thead {
        background-color: rgb(115, 148, 107);
        color: white;
    }

    .btn-update {
        background-color: rgb(158, 188, 138);
        color: rgb(83, 125, 93);
        transition: background-color 0.3s ease;
    }

        .btn-update:hover {
            background-color: rgb(115, 148, 107);
            color: white;
        }

    .btn-delete {
        background-color: rgb(210, 208, 160);
        color: rgb(83, 125, 93);
        transition: background-color 0.3s ease;
    }

        .btn-delete:hover {
            background-color: rgb(158, 188, 138);
            color: rgb(83, 125, 93);
        }
    tbody , td {
        background-color: rgb(210, 208, 160) !important;
        color: black;
    }

        tbody tr:hover {
            background-color: rgb(210, 208, 160) !important;
            color: black;
        }
 

</style>

<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Rezervasyon Adımları</h3>
            <a href="/BookingSteps/AddBookingSteps/" class="btn btn-add">
                <i class="fas fa-plus"></i> Yeni Rezervasyon
            </a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Adım Sırası</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Simge Adı</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BookingStepsID</td>
                            <td>@item.StepOrder</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.IconeName</td>
                            <td>
                                <a href="/BookingSteps/UpdateBookingSteps/@item.BookingStepsID" class="btn btn-update">
                                    <i class="fas fa-edit"></i> Güncelle
                                </a>
                            </td>
                            <td>
                                <a href="/BookingSteps/DeleteBookingSteps/@item.BookingStepsID" class="btn btn-delete" onclick="return confirm('Bu rezervasyonu silmek istediğinize emin misiniz?');">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
