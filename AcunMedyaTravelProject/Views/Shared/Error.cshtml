@{
    Layout = null;
    Response.StatusCode = 500;  // Genel sunucu hatası için 500 kodu
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Bir Hata Oluştu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff3f3;
            color: #b00000;
            text-align: center;
            padding: 50px;
        }

        h1 {
            font-size: 48px;
            margin-bottom: 10px;
        }

        p {
            font-size: 20px;
