@model List<AcunMedyaTravelProject.Entities.Services>
@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Font Awesome ikonları -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/cs++s/all.min.css" rel="stylesheet">

<div class="container mt-5">
  

    <div class="card shadow-lg rounded">
        <!-- HİZMETLER LİSTESİ başlığı - turuncu ton -->
        <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #e67e22;">
            <h3 class="mb-0">Hizmetler Sayfası</h3>
            <a href="/Services/AddServices/" class="btn" style="background-color: #dc3545; color: white;">
                <i class="fas fa-plus"></i> Yeni Hizmet
            </a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover text-center align-middle">
                <!-- tablo başlıkları - turuncu ton -->
                <thead style="background-color: #e67e22; color: white;">
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Resim</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ServicesID</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <img src="@item.ImageUrl" class="rounded" style="width:60px; height:60px; object-fit:cover;" />
                            </td>
                            <td>
                                <a href="/Services/UpdateServices/@item.ServicesID" class="btn" style="background-color: #dc3545; color: white;">
                                    <i class="fas fa-edit"></i> Güncelle
                                </a>
                            </td>
                            <td>
                                <a href="/Services/DeleteServices/@item.ServicesID" class="btn" style="background-color: #e74c3c; color: white;" onclick="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>