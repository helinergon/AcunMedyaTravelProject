@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-yV7eB+W6VZ3fZKGVKMbv+bTxktOZla7iZkMyR5u+OVzXxFQpHy6rJjUGqjcZGxswuIN3N9d3nJmV7Lq0pUX4+Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Quicksand', sans-serif;
            background: linear-gradient(to right, #d0f0c0, #a8e6cf);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: linear-gradient(to bottom right, #f0fff0, #d8f3dc);
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            animation: fadeIn 1s ease-in-out;
        }

        .login-container h2 {
            text-align: center;
            color: #2e7d32;
            margin-bottom: 30px;
            font-size: 28px;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-group i {
            position: absolute;
            top: 11px;
            left: 10px;
            color: #66bb6a;
            font-size: 16px;
        }

        .form-group input {
            width: 100%;
            padding: 10px 10px 10px 35px;
            border: 2px solid #a5d6a7;
            border-radius: 10px;
            outline: none;
            transition: border-color 0.3s, box-shadow 0.3s;
            font-size: 14px;
        }

        .form-group input:focus {
            border-color: #4caf50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.4);
        }

        input[type="submit"] {
            width: 100%;
            padding: 12px;
            background: #4caf50;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        input[type="submit"]:hover {
            background: #388e3c;
        }

        .validation-message {
            color: #c62828;
            margin-top: 15px;
            font-size: 0.9em;
            text-align: center;
        }

        @@keyframes fadeIn {
            from {
                transform: scale(0.95);
                opacity: 0;
            }
            to {
                transform: scale(1);
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Admin Paneline Hoşgeldiniz.. Giriş Yapınız!!</h2>
        <form action="/Login/Index" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <i class="fa fa-user"></i>
                <input type="text" name="UserName" placeholder="Kullanıcı Adı" required />
            </div>

            <div class="form-group">
                <i class="fa fa-lock"></i>
                <input type="password" name="Password" placeholder="Şifre" required />
            </div>

            <input type="submit" value="Giriş Yap" />
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-message">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        }
    </div>
</body>
</html>



